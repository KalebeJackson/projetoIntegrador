                        <input type="checkbox" name="volume" value="4">
                    </li>
                    <li><label for="volume">Volume 5</label>
                        <input type="checkbox" name="volume" value="5">
                    </li>
                    <li><label for="volume">Volume 6</label>
                        <input type="checkbox" name="volume" value="6">
                    </li>
                </ul>

                <label for="capitulo">Capítulo:</label>
                <ul type="none">
                    <li>
                        <label for="capitulo">Capítulo 1</label>
                        <input type="checkbox" name="capitulo" value="1">
